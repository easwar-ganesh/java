
import java.io.*;
import java.util.Scanner;
import java.lang.Math;

class Circlearea3
{
    double r;
double area()
    {
        return (22/7.0)*r*r;
    }
void setCircle(double r)
    {
       this.r=r;
    }

}
class CircleMain3
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        Circlearea3 ob1 = new Circlearea3();
        Circlearea3 ob2 = new Circlearea3();
        System.out.println("Enter radius of 2 circles: ");
        double r1=sc.nextFloat();
        double r2=sc.nextFloat();
        ob1.setCircle(r1);
        ob2.setCircle(r2);
        System.out.println("Area of Circle-1 is : "+ob1.area());
        System.out.println("Area of Circle-2 is : "+ob2.area());
    } 
}
